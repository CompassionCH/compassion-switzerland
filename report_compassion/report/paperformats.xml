<odoo>
    <data noupdate="1">
        <!-- Childpack -->
        <record id="paperformat_childpack" model="report.paperformat">
            <field name="name">Childpack</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">420</field>
            <field name="page_width">210</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">3</field>
            <field name="dpi">96</field>
        </record>
        <record id="paperformat_childpack_disable_smart_shrinking" model="report.paperformat.parameter">
            <field name="paperformat_id" ref="paperformat_childpack"/>
            <field name="name">--disable-smart-shrinking</field>
        </record>

        <record id="paperformat_mini_childpack" model="report.paperformat">
