<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="list">
            <t t-call="website.layout">
                <t t-set="title">Muskathlons</t>
                <div class="oe_structure"/>
                <div class="oe_structure">
                    <div class="container" style="margin-top: 40px;">
                        <h3 class="text-center" style="margin-bottom: 20px;">
                            Events
                        </h3>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Date</th>
                                    <th>Name</th>
                                    <th>Muskathlon ID</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="events" t-as="event">
                                    <tr>
                                        <td>
                                            <t t-esc="event.id"/>
                                        </td>
                                        <td>
                                            <t t-esc="time.strftime('%d.%m.%Y',time.strptime(event.start_date,'%Y-%m-%d %H:%M:%S'))"/>
                                        </td>
                                        <td>
                                            <a t-attf-href="/event/{{ event.id }}">
                                                <t t-esc="event.name"/>
                                            </a>
                                        </td>
                                        <td>
                                            <t t-esc="event.muskathlon_event_id"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>
    </data>
</odoo>
