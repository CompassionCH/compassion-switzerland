<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="custom_portal_my_home"
                  inherit_id="website_portal.portal_layout"
                  name="Custom My Portal">
            <xpath expr="//div[@id='wrap']" position="replace">
                <!-- save changes in odoo -->
                <script>
                    $(function() {
                        $('form[id^="form_"]').each(function() {
                            var id = $(this).prop('id');
                            var save_button = $('#' + id.replace('form', 'save'));
                            var type_id = id.replace('form', 'type');
                            if (!$('#'+type_id).length) {
                                $(this).append($(document.createElement('input')).attr('type', 'hidden').attr('name', type_id));
                            }

                            save_button.click(function() {
                                $.post('/my/api', $('#'+id).serialize(), function(data) {
                                    $('#'+id.replace('form', 'text')).html(data);
                                    $('#success_message').show();
                                });
                            });
                        });
                    });
                </script>
                <!-- hides navbar from my portal -->
                <style>.mt16 .navbar { display: none !important; }</style>
                <div class="container mb64">
                    <div style="margin-left: 10px; margin-right: 10px;">
                        <div id="success_message" style="display: none;" class="alert alert-success">Your informations were successfuly updated</div>
                        <t t-if="muskathlete_without_ambassador_details">
                            <div class="alert alert-danger">This partner is registered in a muskathlon but has no ambassador_details</div>
                        </t>
                        <div class="row">
                            <div class="col-sm-6 col-md-5 col-lg-4">
                                <div class="row">
                                    <div class="col-xs-12"
                                         style="padding-left: 5px;">
                                        <div class="o_my_details">
                                            <h3 class="page-header"
                                                style="margin-bottom: 8px; margin-top: 10px;">
                                                Coordinates
                                                <button type="button"
                                                        class="btn btn-default btn-xs"
                                                        data-toggle="modal"
                                                        data-target="#modal_change_coordinates">
                                                    Change
                                                </button>
                                            </h3>
                                            <div id="text_coordinates">
                                                <t t-call="muskathlon.coordinates_formatted"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <t t-if="registrations">
                                    <div class="row"
                                         style="margin-top: 15px; margin-bottom: 20px;">
                                        <button type="button" class="btn btn-default"
                                                data-toggle="modal"
                                                data-target="#modal_change_settings">
                                            Settings
                                        </button>
                                        <t t-if="survey_already_filled">
                                            <a class="btn btn-primary" t-attf-href="{{survey_url.replace('start', 'print')}}/{{survey_already_filled.token}}">See completed medical survey</a>
                                        </t>
                                        <t t-else="">
                                            <a class="btn btn-primary" t-attf-href="{{survey_url}}">Complete medical survey</a>
                                        </t>
                                    </div>
                                </t>
                            </div>
                            <t t-if="registrations">
                                <div class="col-sm-6">
                                    <div id="text_tripinfos">
                                        <t t-call="muskathlon.tripinfos_formatted"/>
                                    </div>
                                </div>
                                <div class="col-md-1 col-lg-2"/>
                            </t>
                            <t t-else="">
                                <div class="col-sm-6 col-md-7 col-lg-8"/>
                            </t>
                        </div>
                        <t t-if="registrations">
                            <div class="row">
                                <div class="col-xs-12">
                                    <div id="text_aboutme">
                                        <t t-call="muskathlon.aboutme_formatted"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                        <t t-if="registrations">
                            <div class="row">
                                <h3 class="page-header"
                                    style="margin-top: 25px; margin-bottom: 10px;">
                                    Pictures
                                    <label for="upload_picture_1" type="button" class="btn btn-default btn-xs">
                                        Change picture 1
                                    </label>
                                    <label for="upload_picture_2" type="button" class="btn btn-default btn-xs">
                                        Change picture 2
                                    </label>

                                    <form id="form_picture_1" action="/my/api" method="post" enctype="multipart/form-data">
                                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                        <input type="file"
                                               name="picture_1"
                                               id="upload_picture_1"
                                               accept="image/*"
                                               style="opacity: 0; position: absolute; z-index: -1;"/>
                                    </form>

                                    <form id="form_picture_2" action="/my/api" method="post" enctype="multipart/form-data">
                                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                        <input type="file"
                                               name="picture_2"
                                               id="upload_picture_2"
                                               accept="image/*"
                                               style="opacity: 0; position: absolute; z-index: -1;"/>
                                    </form>

                                    <!-- auto-submit files -->
                                    <script>
                                        $(function() {
                                            $('#upload_picture_1, #upload_picture_2').change(function() {
                                                var form_id = $(this).prop('id').replace('upload', 'form');
                                                var content_id = form_id.replace('form', 'content');
                                                $.ajax({
                                                    url: '/my/api',
                                                    type: 'POST',
                                                    data: new FormData($('#'+form_id)[0]),
                                                    processData: false,
                                                    contentType: false
                                                })
                                                .done(function(data) {
                                                    if (!/no image uploaded/.test(data)) {
                                                        $('#'+content_id).html(data);
                                                        $('#success_message').show();
                                                    }
                                                });
                                            });
                                        });
                                    </script>
                                </h3>
                                <div class="pictures-container" style="max-width: 600px;">
                                    <div class="row">
                                        <div id="content_picture_1" class="col-sm-6">
                                            <t t-call="muskathlon.picture_1_formatted"/>
                                        </div>
                                        <div id="content_picture_2" class="col-sm-6">
                                            <t t-call="muskathlon.picture_2_formatted"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                        <t t-if="registrations">
                            <div class="row">
                                <h3 class="page-header"
                                    style="margin-top: 25px; margin-bottom: 10px;">
                                    Muskathlons
                                </h3>
                                <div class="alert alert-info">Click on a muskathlon
                                    event to access to all related donations
                                </div>
                                <table class="table table-striped"
                                       style="margin-top: -5px;">
                                    <thead>
                                        <tr>
                                            <th>Muskathlon</th>
                                            <th>Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="registrations"
                                           t-as="registration">
                                            <tr>
                                                <td>
                                                    <a t-attf-href="/my/muskathlons/{{ registration.event_id.id }}">
                                                        <t t-esc="registration.event_id.name"/>
                                                    </a>
                                                </td>
                                                <td>
                                                    <t t-esc="time.strftime('%d.%m.%Y',time.strptime(registration.event_id.start_date,'%Y-%m-%d %H:%M:%S'))"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </t>
                        <t t-call="muskathlon.modal_coordinates"/>
                        <t t-if="registrations">
                            <t t-call="muskathlon.modal_aboutme"/>
                            <t t-call="muskathlon.modal_tripinfos"/>
                            <t t-call="muskathlon.modal_settings"/>
                        </t>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
