<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Add text for donation receipts -->
    <record id="view_muskathlon_events_thank_donation" model="ir.ui.view">
        <field name="name">crm.event.compassion.thankyou.form</field>
        <field name="model">crm.event.compassion</field>
        <field name="inherit_id" ref="crm_compassion.view_events_form"/>
        <field name="arch" type="xml">
            <div name="buttons" position="inside">
                <button class="oe_stat_button" name="website_publish_button" type="object" icon="fa-globe">
                    <field name="website_published" widget="website_button"/>
                </button>
            </div>
            <notebook>
                <page string="Donation Receipts">
                    <field name="thank_you_text" widget="text_ckeditor4" options="{'style-inline': true}"/>
                </page>
                <page string="Website">
                    <group string="Public page">
                        <field name="filename_1" invisible="1"/>
                        <field name="picture_1" filename="filename_1"/>
                        <field name="sport_discipline_ids"/>
                        <field name="website_description" widget="html_frame" options="{'editor_url': '/mass_mailing/field/email_template'}"/>
                        <field name="website_side_info" widget="html_frame" options="{'editor_url': '/mass_mailing/field/email_template'}"/>
                    </group>
                    <group string="Order material page">
                        <field name="website_my_introduction" widget="html_frame" options="{'editor_url': '/mass_mailing/field/email_template'}"/>
                        <field name="website_my_fundraising" widget="html_frame" options="{'editor_url': '/mass_mailing/field/email_template'}"/>
                        <field name="website_my_information" widget="html_frame" options="{'editor_url': '/mass_mailing/field/email_template'}"/>
                        <field name="website_my_press_material" widget="html_frame" options="{'editor_url': '/mass_mailing/field/email_template'}"/>
                        <field name="website_my_sport_material" widget="html_frame" options="{'editor_url': '/mass_mailing/field/email_template'}"/>
                    </group>
                </page>
                <page string="4M registrations">
                    <group>
                        <field name="muskathlon_event_id"/>
                        <field name="registration_fee"/>
                        <field name="participants_amount_objective"/>
                    </group>
                    <group>
                        <field name="muskathlon_registration_ids" context="{'default_event_id': id}">
                            <tree>
                                <field name="partner_id"/>
                                <field name="muskathlon_participant_id"/>
                                <field name="reg_id"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
