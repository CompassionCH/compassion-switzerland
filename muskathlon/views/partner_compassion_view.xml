<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_muskathlon_partner_letter_delivery" model="ir.ui.view">
        <field name="name">muskathlon.partner.letter.delivery</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="partner_compassion.view_partner_form_compassion_ch"/>
        <field name="arch" type="xml">
            <notebook>
                <page string="Muskathlon">
                    <group col="6">
                        <field name="muskathlon_participant_id" colspan="4"/><label string="" nolabel="1" colspan="2"/>
                    </group>
                    <group>
                        <field name="muskathlon_registration_ids" context="{'default_partner_id': id}">
                            <tree>
                                <field name="event_id"/>
                                <field name="muskathlon_event_id"/>
                                <field name="reg_id"/>
                            </tree>
                        </field>
                    </group>
                    <p>Set a custom text used in thank you letters for donations linked to an event and to this partner.</p>
                    <field name="ambassador_quote" widget="text_ckeditor4"/>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
