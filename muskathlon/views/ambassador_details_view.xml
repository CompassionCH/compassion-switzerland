<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_ambassador_details_muskathlon" model="ir.ui.view">
            <field name="name">view.ambassador.details.muskathlon</field>
            <field name="model">ambassador.details</field>
            <field name="inherit_id" ref="partner_compassion.view_ambassador_details_default"/>
            <field name="arch" type="xml">
                <xpath expr="//group[last()]" position="after">
                    <div id="muskathlon_trip_infos">
                    <style>
                    #muskathlon_trip_infos tr td {
                        padding-top: 7px;
                    }
                    </style>
                        <group>
                            <field name="birth_name"/>
                            <field name="passport_number"/>
                            <field name="passport_expiration_date"/>
                            <field name="emergency_name"/>
                            <field name="emergency_phone"/>
                            <field name="emergency_relation_type"/>
                            <field name="tshirt_size"/>
                        </group>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
