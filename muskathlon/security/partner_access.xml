<?xml version="1.0"?>
<odoo>
    <data>
        <!-- Allow to display participants in muskathlon website -->
        <record model="ir.rule" id="res_partner_website_rule">
            <field name="name">res_partner: muskathlon website access</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">['muskathlon_participant_id']</field>
            <field name="groups" eval="[(4, ref('base.group_public'))]"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
        </record>
    </data>
</odoo>