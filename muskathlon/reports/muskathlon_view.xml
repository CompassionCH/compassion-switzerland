<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_muskathlon_tree" model="ir.ui.view">
        <field name="name">muskathlon.report.tree</field>
        <field name="model">muskathlon.report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date_display"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="amount"/>
                <field name="payment_mode_id"/>
                <field name="event_id"/>
                <field name="journal_id"/>
                <field name="sent_to_4m"/>
            </tree>
        </field>
    </record>

    <record id="view_muskathlon_form" model="ir.ui.view">
        <field name="name">muskathlon.report.form</field>
        <field name="model">muskathlon.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="event_id"/>
                            <field name="payment_mode_id"/>
                            <field name="journal_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="user_id"/>
                            <field name="sent_to_4m"/>
                            <field name="amount" widget="monetary"/>
                        </group>
                        <group>
                            <field name="invoice_line_id"/>
                            <field name="contract_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_muskathlon_search" model="ir.ui.view">
        <field name="name">muskathlon.report.search</field>
        <field name="model">muskathlon.report</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <field name="event_id"/>
                <field name="user_id"/>
                <field name="partner_id"/>
                <field name="amount"/>
                <field name="sent_to_4m"/>
                <field name="payment_mode_id"/>
                <field name="journal_id"/>

                <filter string="Not Paypal" name="group_not_paypal" domain="[('journal_id', 'not like', 'Paypal')]"/>
                <separator/>
                <filter string="Not sent to 4M" name="group_not_sent_to_4m" domain="[('sent_to_4m', '=', False)]"/>

                <!-- group by -->
                <filter string="Ambassador" name="group_ambassador" context="{'group_by':'user_id'}"/>
            </search>
        </field>
    </record>

    <!-- muskathlons report -->
    <record id="action_muskathlons_report" model="ir.actions.act_window">
        <field name="name">Muskathlons</field>
        <field name="res_model">muskathlon.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,graph</field>
        <field name="search_view_id" ref="view_muskathlon_search"/>
    </record>

    <record id="view_muskathlon_report_graph" model="ir.ui.view">
         <field name="name">muskathlon.report.graph</field>
         <field name="model">muskathlon.report</field>
         <field name="arch" type="xml">
             <graph string="Muskathlon stats" type="bar">
                 <field name="user_id" type="row"/>
                 <field name="amount" type="measure"/>
             </graph>
         </field>
    </record>

    <!-- muskathlon reports menu -->
    <menuitem id="menu_label_muskathlons" name="Muskathlons" parent="account.menu_finance_reports" sequence="5"/>
    <menuitem name="Muskathlon report" action="action_muskathlons_report" id="menu_muskathlon_report" parent="menu_label_muskathlons"/>
</odoo>
