<odoo>
    <data noupdate="1">

        <record id="muskathlon_medical_survey_to_doctor_template" model="mail.template">
            <field name="name">Muskathlon Medical Survey To Doctor</field>
            <field name="use_default_to" eval="True"/>
            <field name="subject">New medical survey form Muskathlon participant</field>
            <field name="report_template" ref="muskathlon_medical_survey_report"/>
            <field name="body_html" type="html">
                <p>
                    Dear Doctor,
                    <br/>
                    <br/>
                    Here is the pdf containing the medical survey
                    <br/>
                    <br/>
                    Yours sincerely.
                </p>
            </field>
        </record>

        <report id="muskathlon_medical_survey_report_id"
        model="survey.user_input"
        string="Muskathlon Medical Report"
        report_type="qweb-pdf"
        name="muskathlon_medical_survey_report"
        menu="False"/>

    </data>
</odoo>