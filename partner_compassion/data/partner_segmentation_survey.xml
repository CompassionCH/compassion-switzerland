    <!-- Partner segmentation survey-->
    <record id="partner_segmentation_survey" model="survey.survey">
        <field name="auth_required" eval="True"/>
        <field name="users_can_go_back" eval="False"/>
        <field name="title">Let's get to know each other</field>
        <field name="description" type="html">
            <p>
                Welcome! Thank you for participating in this 5-minute survey that will allow Compassion to better serve supporters like you.
            </p>
            <p style="color: #005eb8;" class="font-weight-bold">
            When you complete this survey, you will be provided information and resources that will enrich your experience with Compassion.
            </p>
            <p>
            Please be assured that this survey is completely confidential, and we will only use this information to improve our service to you. We will never publish or share your personal data with third parties without your permission.
            </p>
            <p>
            So let's get started!
            </p>
        </field>
        <field name="thank_you_message" type="html">
            <p>
                Let's see your results and discover your profile!
            </p>
             <div style="margin:20px auto; text-align: center; text-transform: uppercase;">
               <a href="/my/profile-survey-result" class="btn btn-primary" role="button">
                Discover my profile
               </a>
            </div>
        </field>
    </record>
