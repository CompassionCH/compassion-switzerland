<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_ambassador_details_default" model="ir.ui.view">
        <field name="name">view.ambassador.details.default</field>
        <field name="model">ambassador.details</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="description"/>
                        <field name="quote"/>
                    </group>
                    <group>
                        <field name="filename_1" invisible="1"/>
                        <field name="filename_2" invisible="1"/>
                        <group>
                            <field name="picture_1" filename="filename_1"/>
                        </group>
                        <group>
                            <field name="picture_2" filename="filename_2"/>
                        </group>
                    </group>
                    <group>
                        <field name="mail_copy_when_donation"/>
                    </group>
                    <p>Set a custom text used in thank you letters for donations linked to an event and to this partner.</p>
                    <group>
                        <field name="thank_you_quote" widget="text_ckeditor4"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
