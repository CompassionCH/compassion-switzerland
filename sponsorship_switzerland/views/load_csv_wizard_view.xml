<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="load_csv_wizard_views" model="ir.ui.view">
        <field name="name">Load CSV wizard form view</field>
        <field name="model">load.csv.wizard</field>
            <field name="arch" type="xml">
                <form string="File uploading">
                    <sheet>
                        <group>
                            <field widget="binary" height="64" name="data_csv" filename="name_data_csv"/>
                            <field name = "name_data_csv" invisible="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button type="object"
                                name="link_gift2letters"
                                string="Apply the change"
                                class="btn-primary"
                               />
                    </footer>
                </form>
            </field>
    </record>
</odoo>
