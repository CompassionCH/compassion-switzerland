<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Add text for donation receipts -->
    <record id="view_open_event_wizard" model="ir.ui.view">
        <field name="name">crm.event.compassion.open.wizard.form</field>
        <field name="model">crm.event.compassion.open.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="registration_fee"/>
                    <field name="product_id" attrs="{'invisible': [('registration_fee', '=', 0)]}"/>
                </group>
                <group>
                    <field name="fundraising"/>
                    <field name="participants_amount_objective" attrs="{'invisible': [('fundraising', '=', False)]}"/>
                    <field name="custom_amount_objective" attrs="{'invisible': [('fundraising', '=', False)]}"/>
                    <field name="sponsorship_donation_value" attrs="{'invisible': [('fundraising', '=', False)]}"/>
                </group>
                <group>
                    <field name="seats_min"/>
                    <field name="seats_max"/>
                </group>
                <group>
                    <field name="reply_to"/>
                </group>
                <footer>
                    <button name="open_event" string="Open registrations" class="oe_highlight" type="object"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
