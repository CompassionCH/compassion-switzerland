<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="event_faq" name="Event FAQ">
        <t t-call="website.layout">
            <t t-set="title" t-value="event.name"/>
            <div id="wrap">
                <!-- Full width banner -->
                <t t-set="background_color_class" t-value="'compassion_background_blue'"/>
                <t t-call="website_event_compassion.event_header">
                    <t t-set="additional_title"> - Frequently Asked Questions</t>
                </t>

                <!-- Event description -->
                <div class="main_container event_compassion">
                    <div class="row">
                        <div class="col-sm-2 col-md-4"/>
                        <div class="col-sm-8 col-md-4">
                            <t t-foreach="event.odoo_event_id.faq_category_ids" t-as="category">
                                <h3 t-esc="category.name"/>
                                <hr/>
                                <div class="panel-group" t-attf-id="accordion{{category_index}}" role="tablist" aria-multiselectable="true">
                                    <div class="panel panel-default">
                                        <t t-foreach="category.question_ids" t-if="not question.event_type_ids or event.event_type_id in question.event_type_ids" t-as="question">

                                            <div class="panel-heading" role="tab" t-attf-id="heading{{category_index}}{{question_index}}">
                                                <h4 class="panel-title">
                                                    <b>
                                                        <a role="button" data-toggle="collapse" t-attf-data-parent="#accordion{{category_index}}" t-attf-href="#collapse{{category_index}}{{question_index}}" aria-expanded="true" aria-controls="collapse{{category_index}}{{question_index}}" t-field="question.question_title"/>
                                                    </b>
                                                </h4>
                                            </div>
                                            <div t-attf-id="collapse{{category_index}}{{question_index}}" class="panel-collapse collapse" role="tabpanel" t-attf-aria-labelledby="heading{{category_index}}{{question_index}}">
                                                <div class="panel-body">
                                                    <t t-raw="question.question_answer"/>
                                                </div>
                                            </div>
                                        </t>
                                    </div>
                                </div>
                            </t>
                        </div>
                        <div class="col-sm-2 col-md-4"/>
                    </div>
                </div>
                <div class="oe_structure"/>
            </div>

        </t>
    </template>
</odoo>
