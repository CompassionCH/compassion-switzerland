<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Disallow registration pages to be indexed.-->
    <template id="robots_disallow" inherit_id="website_compassion.robots_disallow">
        <xpath expr="." position="inside">
            <t>
Disallow: /event/*/registration/*
Disallow: /event/agreements/*
Disallow: /event/payment/*
Disallow: /event/*/down_payment
            </t>
        </xpath>
    </template>
</odoo>
