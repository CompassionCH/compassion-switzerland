<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- Customize footer  -->
        <template id="custom_footer_fr" inherit_id="website.layout"
                  name="Custom Footer FR" priority="1000">
            <xpath expr="//div[@id='french']" position="replace">
                <t t-set="wordpress" t-value="request.env['wordpress.configuration'].sudo().get_config()"/>
                <div class="row">
                    <div class="col-sm-3">
                        <ul>
                            <li>
                                <a href="#" class="footer_section_title">
                                    Parrainer
                                </a>
                                <ul>
                                    <li>
                                        <a t-att-href="'https://' + wordpress.host + wordpress.sponsorship_url">
                                            Parrainer un enfant
                                        </a>
                                    </li>
                                    <li>
                                        <a t-attf-href="https://#{wordpress.host}/combattre-la-pauvrete/">
                                            Combattre la pauvreté
                                        </a>
                                    </li>
                                    <li>
                                        <a t-attf-href="https://#{wordpress.host}/que-change-votre-parrainage/">
                                            Que change votre parrainage ?
                                        </a>
                                    </li>
                                    <li>
                                        <a t-attf-href="https://#{wordpress.host}/offrir/">
                                            Offrir
                                        </a>
                                    </li>
                                    <li>
                                        <a t-attf-href="https://#{wordpress.host}/ecrire/">
                                            Ecrire
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a href="#" class="footer_section_title">
                                    S’engager
                                </a>
                                <ul>
                                    <li>
                                        <a t-attf-href="https://#{wordpress.host}/donations/">
                                            Donner
                                        </a>
                                    </li>
                                    <li>
                                        <a t-attf-href="https://#{wordpress.host}/participer/">
                                            S’engager bénévolement
                                        </a>
                                    </li>
                                    <li>
                                        <a href="https://together.compassion.ch/fr_CH/homepage">Créer un projet</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <div class="col-sm-3">
                        <ul>
                            <li>
                                <a href="#" class="footer_section_title">A
                                    propos de Compassion
                                </a>
                                <ul>
                                    <li>
                                        <a t-attf-href="https://#{wordpress.host}/qui-sommes-nous/">
                                            Qui sommes-nous ?
                                        </a>
                                    </li>
                                    <li>
                                        <a t-attf-href="https://#{wordpress.host}/historique/">
                                            L’histoire de Compassion
                                        </a>
                                    </li>
                                    <li>
                                        <a t-attf-href="https://#{wordpress.host}/compassion-dans-le-monde/">
                                            Compassion dans le monde
                                        </a>
                                    </li>
                                    <li>
                                        <a t-attf-href="https://#{wordpress.host}/finances/">
                                            Finances
                                        </a>
                                    </li>
                                    <li>
                                        <a t-attf-href="https://#{wordpress.host}/telechargements/">
                                            Téléchargements
                                        </a>
                                    </li>
                                    <li>
                                        <a t-attf-href="https://#{wordpress.host}/category/press/">
                                            Les médias en parlent
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a t-attf-href="https://#{wordpress.host}/nosprincipes/"
                                   class="footer_section_title">Nos Principes
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-sm-3">
                        <ul>
                            <li>
                                <a t-attf-href="https://#{wordpress.host}/news/"
                                   class="footer_section_title">Blog
                                </a>
                            </li>
                            <li>
                                <a t-attf-href="https://#{wordpress.host}/newsletter/"
                                   class="footer_section_title">Newsletter
                                </a>
                            </li>
                            <li>
                                <a t-attf-href="https://#{wordpress.host}/agenda/"
                                   class="footer_section_title">Agenda
                                </a>
                            </li>
                            <li>
                                <a t-attf-href="https://#{wordpress.host}/lapp-compassion/">
                                    L'app Compassion
                                </a>
                            </li>
                        </ul>
                        <h6 class="footer_section_title">Retrouvez-nous sur
                        </h6>
                        <div>
                            <ul class="social-links">
                                <li>
                                    <a target="_blank"
                                       href="https://www.facebook.com/compassionsuisse/"
                                       class="facebook"/>
                                </li>
                                <li>
                                    <a target="_blank"
                                       href="https://www.youtube.com/user/CompassionSuisse"
                                       class="youtube"/>
                                </li>
                                <li>
                                    <a target="_blank"
                                       href="https://vimeo.com/compassionswitzerland"
                                       class="vimeo"/>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <h5 class="footer_section_big_title">Contact</h5>
                        <p>
                            <b>Compassion Suisse</b>
                            <br/>
                            Galilée 3
                            <br/>
                            1400 Yverdon-les-Bains
                            <br/>
                            Tel.: 024 434 21 24
                            <br/>
                            Email:
                            <a href="mailto:info@compassion.ch">
                                info@compassion.ch
                            </a>
                            <br/>
                            IBAN: CH07 0900 0000 1731 2562 0
                        </p>
                        <img src="https://compassion.ch/wp-content/themes/compassion/assets/img/unis-fr.png"/>
                    </div>
                </div>
                <div class="end_footer">
                    <div class="row">
                        <div class="col-sm-4">
                            © 2021 Compassion Suisse
                        </div>
                        <div class="col-sm-8 end_footer_links">
                            <ul>
                                <li>
                                    <a t-attf-href="https://#{wordpress.host}/contact/"
                                       class="end_footer_link">Contact
                                    </a>
                                </li>
                                <li>
                                    <a t-attf-href="https://#{wordpress.host}/protection-enfance/"
                                       class="end_footer_link">Notre engagement
                                        pour la protection de l’enfance
                                    </a>
                                </li>
                                <li>
                                    <a t-attf-href="https://#{wordpress.host}/protection-des-donnees/"
                                       class="end_footer_link">Protection des
                                        données
                                    </a>
                                </li>
                                <li>
                                    <a t-attf-href="https://#{wordpress.host}/questions-frequentes/"
                                       class="end_footer_link">FAQ
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
