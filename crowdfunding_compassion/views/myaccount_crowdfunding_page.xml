<odoo>
    <data>
        <template id="myaccount_crowdfunding_view_template" name="MyAccount crowdfunding template">
            <t t-call="website.layout">

                <h2 class="blue my-2">Personal data</h2>
                <section>
                   <t t-call="crowdfunding_compassion.myaccount_coordinates"/>
                </section>

                <h2 class="blue my-2">Your own projects</h2>
                <section class="projects no-padding-top">
                    <t t-set="projects" t-value="owned_projects"/>
                    <t t-set="owner" t-value="True"/>
                    <t t-call="crowdfunding_compassion.myaccount_project_list_container"/>
                </section>

                <h2 class="blue my-2">Projects you participate to</h2>
                <section class="projects no-padding-top">
                    <t t-set="projects" t-value="participating_projects"/>
                    <t t-set="owner" t-value="False"/>
                    <t t-call="crowdfunding_compassion.myaccount_project_list_container"/>
                </section>

                <h2 class="blue my-2">Donations</h2>
                <t t-if="registrations">
                    <div class="row">
                        <div class="col-xs-12">
                            <h3 class="section-header"
                                style="margin-top: 25px; margin-bottom: 10px;">
                                My events
                            </h3>
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Event</th>
                                        <th>Date</th>
                                        <th>Documents</th>
                                        <th>Barometer</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="registrations"
                                       t-as="registration">
                                        <tr>
                                            <td>
                                                <t t-esc="registration.compassion_event_id.name"/>
                                            </td>
                                            <td>
<!--                                                <t t-esc="time.strftime('%d.%m.%Y',time.strptime(registration.compassion_event_id.start_date,'%Y-%m-%d %H:%M:%S'))"/>-->
                                                <t t-esc="registration.compassion_event_id.start_date"/>
                                            </td>
                                            <td>
                                                <a t-attf-href="/my/muskathlon/{{ registration.id }}">Fundraising /
                                                    Order material
                                                </a>
                                            </td>
                                            <td>
                                                <a t-attf-href="/my/muskathlon/{{ registration.id }}/donations">My
                                                    donations
                                                </a>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>

            </t>
        </template>

        <record id="myaccount_crowdfunding_view" model="ir.ui.view">
            <field name="name">MyAccount view</field>
            <field name="type">qweb</field>
            <field name="key">crowdfunding.myaccount</field>
            <field name="arch" type="xml">
                <t t-call="crowdfunding_compassion.myaccount_crowdfunding_view_template"/>
            </field>
        </record>

        <record id="myaccount_crowdfunding_page" model="website.page">
            <field name="url">/my_account</field>
            <field name="website_indexed" eval="True"/>
            <field name="website_id" eval="ref('crowdfunding_compassion.crowdfunding_website')"/>
            <field name="website_published">True</field>
            <field name="name">MyAccount</field>
            <field name="type">qweb</field>
        </record>

        <template id="my_account_crowdfunding_link" name="Link to MyAccount page" inherit_id="portal.frontend_layout">
            <xpath expr="//a[@href='/my/home']" position="replace">
                <a href="/my_account" role="menuitem" class="dropdown-item">My Account</a>
            </xpath>
        </template>
    </data>
</odoo>