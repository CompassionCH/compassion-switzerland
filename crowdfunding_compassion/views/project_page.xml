<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- === Project Page === -->
        <record id="services_page" model="website.page">
            <field name="name">Project page</field>
            <field name="website_published">True</field>
            <field name="url">/project</field>
            <field name="type">qweb</field>
            <field name="key">crowdfunding_compassion.project_page</field>
            <field name="arch" type="xml">
                <t t-name="crowdfunding_compassion.project_page_template">
                    <t t-call="website.layout">
                        <div id="wrap">
                            <div class="container">
                                <h1>Our Services</h1>
                                <ul class="services">
                                    <li>Cloud Hosting</li>
                                    <li>Support</li>
                                    <li>Unlimited space</li>
                                </ul>


                                <t t-call="crowdfunding_compassion.how_it_works"/>
                            </div>
                        </div>
                    </t>
                </t>
            </field>
        </record>
    </data>
</odoo>
