<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- === Project Page === -->
        <record id="services_page" model="website.page">
            <field name="name">Project page</field>
            <field name="website_published">True</field>
            <field name="url">/project</field>
            <field name="type">qweb</field>
            <field name="key">crowdfunding_compassion.project_page</field>
            <field name="arch" type="xml">
                <t t-name="crowdfunding_compassion.project_page_template">
                    <t t-call="website.layout">

                        <!-- Hero -->
                        <section class="project-hero">
                            <div class="container">

                                <h1 class="project-hero__title">My project name</h1>
                                <div class="row">
                                    <div class="col-12 col-lg-8 mb-4 mb-lg-0">
                                        <img alt="Project image" src="/theme_crowdfunding/static/src/img/DSC-16.jpg" class="project-hero__image" />
                                    </div>
                                    <div class="col-12 col-lg-4">
                                        <div class="card project-hero__card">
                                            <h3 class="blue my-4 text-center">Support the project</h3>
                                            <div class="project-hero__card-content">
                                                <t t-call="crowdfunding_compassion.goal_progress"/>
                                                <t t-call="crowdfunding_compassion.goal_progress"/>

                                            </div>
                                            <div class="project-hero__cart-cta">
                                                <button type="button" class="btn btn-primary btn-lg btn-block mb-2">Donate now</button>
                                                <div class="row">
                                                    <div class="col">
                                                        <button type="button" class="btn btn-white btn-md">Join the project</button>
                                                    </div>
                                                    <div class="col">
                                                        <div class="row project-hero__card-share-text">Share with your friends</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </t>
                </t>
            </field>
        </record>
    </data>
</odoo>
