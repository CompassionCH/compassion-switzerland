<odoo>
    <record id="crowdfunding_participant_view" model="ir.ui.view">
        <field name="name">Crowdfunding Participant View</field>
        <field name="model">crowdfunding.participant</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group string="Participant" name="participant_information">
                            <field name="partner_id" widget="many2one"/>
                            <field name="project_id" widget="many2one"/>
                            <field name="personal_motivation"/>
                            <field name="product_number_reached"/>
                            <field name="number_sponsorships_reached"/>
                        </group>
                        <group string="Goals" name="participant_goals">
                            <field name="product_number_goal"/>
                            <field name="number_sponsorships_goal"/>
                        </group>

                        <group string="Promotion" name="participant_link">
                            <field name="facebook_url" widget="char"/>
                            <field name="twitter_url" widget="char"/>
                            <field name="instagram_url" widget="char"/>
                            <field name="personal_web_page_url" widget="char"/>
                            <field name="profile_photo" widget="binary"/>
                        </group>
                    </group>
                    <notebook name="participant_relation">
                        <page string="Donations">
                            <field name="invoice_line_ids" widget="one2many" context="{'default_tree_view': %(crowdfunding_compassion.donation_tree_view)d}" domain="[('state','=','paid')]"/>
                        </page>
                        <page string="Sponsorships">
                            <field name="sponsorship_ids" widget="one2many">
                                <tree order="create_date desc">
                                   <field name="create_date"/>
                                   <field name="partner_id"/>
                                   <field name="child_id"/>
                                   <field name="total_amount"/>
                                   <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree view -->
    <record id="view_crowdfunding_participant_tree" model="ir.ui.view">
        <field name="name">crowdfunding.participant.tree</field>
        <field name="model">crowdfunding.participant</field>
        <field name="arch" type="xml">
            <tree>
                <field name="project_id"/>
                <field name="partner_id"/>
            </tree>
        </field>
    </record>

    <!-- Kanban view -->
   <record id="crowdfunding_participant_kanban_view" model="ir.ui.view">
      <field name="name">crowdfunding.participant.kanban</field>
      <field name="model">crowdfunding.participant</field>
      <field name="arch" type="xml">
         <kanban default_order="name">
            <field name="id" />
            <field name="partner_id" />
            <field name="project_id" />
            <field name="product_number_goal" />
            <field name="product_number_reached" />
            <field name="number_sponsorships_goal" />
            <field name="number_sponsorships_reached" />
             <field name="color"/>
             <field name="color_sponsorship"/>
             <field name="color_product"/>
            <templates>
               <t t-name="kanban-box">
                  <div t-attf-class="#{kanban_color(record.color.raw_value)} oe_kanban_global_click card o_kanban_record_has_image_fill">
                     <div class="o_dropdown_kanban dropdown">
                        <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown">
                           <span class="fa fa-ellipsis-v" />
                        </a>
                        <div class="dropdown-menu" role="menu">
                           <t t-if="widget.editable">
                              <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                           </t>
                           <t t-if="widget.deletable">
                              <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                           </t>
                           <ul class="oe_kanban_colorpicker" data-field="color" />
                        </div>
                     </div>
                     <div class="o_kanban_image_fill_left d-none d-md-block" t-attf-style="background-image:url('#{kanban_image('crowdfunding.participant', 'profile_photo', record.id.raw_value)}')">
                     </div>
                     <div class="card-body oe_kanban_details">
                        <h4 class="card-title" style="text-transform: uppercase;">
                           <a type="open">
                              <field name="partner_id" />
                           </a>
                        </h4>
                        <h5>
                           <span t-attf-class="#{record.color_sponsorship.raw_value}">
                              <field name="number_sponsorships_reached" />
                              /
                              <field name="number_sponsorships_goal" />
                              sponsorship reached
                           </span>
                           <span t-attf-class="#{record.color_product.raw_value}">
                              <field name="product_number_reached" />
                              /
                              <field name="product_number_goal" />
                              product reached
                           </span>
                        </h5>
                     </div>
                  </div>
               </t>
            </templates>
         </kanban>
      </field>
   </record>

    <!-- Search view -->
   <record id="crowdfunding_participant_search" model="ir.ui.view">
      <field name="name">crowdfunding.participant.search</field>
      <field name="model">crowdfunding.participant</field>
      <field name="arch" type="xml">
         <search>
            <field name="partner_id" />
            <field name="project_id" />
            <filter name="state_active" domain="[('project_id.state', '=', 'active')]" string="Active"/>
            <filter name="state_draft" domain="[('project_id.state', '=', 'draft')]" string="Draft"/>
            <filter name="state_done" domain="[('project_id.state', '=', 'done')]" string="Done"/>
            <group expand="0" string="Group By">
               <filter string="Project" name="group_project" context="{'group_by':'project_id'}" />
               <filter string="Contact" name="group_contact" context="{'group_by':'partner_id'}" />
            </group>
         </search>
      </field>
   </record>

    <!-- Action opening the views -->
    <record id="open_view_crowdfunding_participant_tree"
            model="ir.actions.act_window">
        <field name="name">Participants</field>
        <field name="res_model">crowdfunding.participant</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_state_active':1, 'search_default_group_project': 1}</field>
    </record>

    <menuitem id="menu_event_crowdfunding" name="Crowdfunding"
              parent="event.event_main_menu"
              sequence="10"/>

    <menuitem id="menu_crowdfunding_participant"
              parent="menu_event_crowdfunding"
              name="Participants"
              action="open_view_crowdfunding_participant_tree"
              sequence="2"/>
</odoo>
