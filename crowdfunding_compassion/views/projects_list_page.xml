<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="crowdfunding_project_list" model="website.page">
            <field name="url">/project_list</field>
            <field name="website_indexed" eval="True"/>
            <field name="website_published">True</field>
            <field name="name">Project List</field>
            <field name="type">qweb</field>
            <field name="key">crowdfunding.project_list</field>
            <!--            TODO: change 12-->
            <field name="website_id">12</field>
            <field name="arch" type="xml">
                <t name="Project List" t-name="crowdfunding.project_list">
                    <t t-call="website.layout">
                        <xpath expr="//nav[@id='oe_main_menu_navbar']" position="before">
                            <t t-call="theme_crowdfunding.crowdfunding_navbar"/>
                        </xpath>

                        <div id="title">
<!--                            <h1 class="blue my-4 text-center">JOIN A GREAT PROJECT</h1>-->
                            <h1 class="h1-font-size text-center blue">JOIN A GREAT PROJECT</h1>
                            <h2 class="text-center">Two lines explanation or introduction about project launch</h2>
                            <br/>
                            <br/>
                        </div>

                        <div id="project_cards">
                            <h2 class="blue my-4 text-center">ACTIVE PROJECTS</h2>
                             <!--                        <t t-set="card" t-value=""/>-->
                            <t t-call="theme_crowdfunding.crowdfunding_card_container"/>
                        </div>

                        <t t-call="theme_crowdfunding.crowdfunding_footer"/>
                    </t>
                </t>
            </field>
        </record>
    </data>
</odoo>
