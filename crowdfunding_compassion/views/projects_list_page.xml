<odoo>
    <data>
        <template id="project_list_view_template" name="Product list template">
            <t t-call="website.layout">
                <t t-call="crowdfunding_compassion.crowdfunding_project_list_header"/>

                <div id="project_cards">
                    <h2 class="blue my-4 text-center">ACTIVE PROJECTS</h2>
                    <t t-set="cards" t-value="project_list"/>
                    <t t-call="crowdfunding_compassion.crowdfunding_card_container"/>
                </div>

                <t t-call="crowdfunding_compassion.crowdfunding_projects_pagination"/>

                <t t-call="crowdfunding_compassion.crowdfunding_footer"/>
            </t>
        </template>

        <record id="project_list_view" model="ir.ui.view">
            <field name="name">Project List</field>
            <field name="type">qweb</field>
            <field name="model">crowdfunding.project</field>
            <field name="key">crowdfunding.project_list</field>
            <field name="arch" type="xml">
                <t t-call="crowdfunding_compassion.project_list_view_template"/>
            </field>
        </record>

        <record id="project_list_page" model="website.page">
            <field name="url">/together/projects</field>
            <field name="website_indexed" eval="True"/>
            <field name="website_id" eval="ref('crowdfunding_compassion.crowdfunding_website')"/>
            <field name="website_published">True</field>
            <field name="name">Project List</field>
            <field name="type">qweb</field>
        </record>

        <record id="project_list_menu" model="website.menu">
            <field name="name">Project List</field>
            <field name="page_id" ref="project_list_page"/>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">87</field>
        </record>
    </data>
</odoo>
