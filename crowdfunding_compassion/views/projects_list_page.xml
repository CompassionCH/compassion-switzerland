        <record id="project_list_view" model="ir.ui.view">
            <field name="name">Project List</field>
            <field name="type">qweb</field>
            <field name="key">crowdfunding.project_list</field>
            <field name="arch" type="xml">
                <t t-call="crowdfunding_compassion.project_list_view_template"/>
            </field>
        </record>

        <record id="crowdfunding_project_list" model="website.page">
            <field name="url">/project_list</field>
            <field name="website_indexed" eval="True"/>
            <field name="website_published">True</field>
            <field name="name">Project List</field>
            <field name="type">qweb</field>
            <field name="key">crowdfunding.project_list</field>
            <!--            TODO: change 12-->
            <!--            <field name="website_id">12</field>-->
            <field name="arch" type="xml">
                <t name="Project List" t-name="crowdfunding.project_list">
                    <t t-call="website.layout">
                        <xpath expr="//nav[@id='oe_main_menu_navbar']" position="before">
                            <t t-call="theme_crowdfunding.crowdfunding_navbar"/>
                        </xpath>

        <record id="crowdfunding_project_list_values" model="website.page">
            <field name="url">/projects</field>
            <field name="website_indexed" eval="True"/>
            <field name="website_published">True</field>
            <field name="name">Project List Values</field>
            <field name="type">qweb</field>
        </record>

        <record id="project_list_menu_values" model="website.menu">
            <field name="name">Project List Values</field>
            <field name="page_id" ref="crowdfunding_project_list_values"/>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">86</field>
        </record>

        <record id="project_list_menu" model="website.menu">
            <field name="name">Project List</field>
            <field name="page_id" ref="crowdfunding_project_list"/>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">85</field>
        </record>

