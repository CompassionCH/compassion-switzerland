<odoo>
    <data>
        <template id="myaccount_project_board">
            <div class="row">
                <div class="col-xs-12">
                    <h3 class="section-header"
                        style="margin-top: 25px; margin-bottom: 10px;">
                    </h3>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Project</th>
                                <th>Deadline</th>
                                <th>Type</th>
                                <th>Link to project</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-if="projects">
                                <t t-foreach="projects"
                                   t-as="project">
                                    <tr>
                                        <td>
                                            <t t-esc="project.name"/>
                                        </td>
                                        <td>
                                            <t t-esc="project.deadline"/>
                                        </td>
                                        <td>
                                            <t t-esc="project.type"/>
                                        </td>
                                        <td>
                                            <t t-if="owner">
                                                <a t-attf-href="/project/{{project.id}}">
                                                    Edit project
                                                </a>
                                            </t>
                                            <t t-else="">
                                               <a t-attf-href="#">
                                                    Edit registration
                                                </a>
                                            </t>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
        </template>

        <template id="myaccount_donation_board">
            <div class="row">
                <div class="col-xs-12">
                    <h3 class="section-header"
                        style="margin-top: 25px; margin-bottom: 10px;">
                    </h3>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Event</th>
                                <th>Amount</th>
                                <th>Date</th>
                                <th>Donation</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="donations"
                               t-as="donation">
                                <tr>
                                    <td>
                                        <t t-esc="project_name"/>
                                    </td>
                                    <td>
                                        <t t-esc="donation_amount"/>
                                    </td>
                                    <td>
                                        <t t-esc="preject_deadline"/>
                                    </td>
                                    <td>
                                        <a t-attf-href="/donations/{{donation.id}}">
                                            See details
                                        </a>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
        </template>

        <template id="myaccount_coordinates">
            <!-- Coordinates -->
            <div class="col-sm-6 col-md-5 col-lg-4">
                <div class="o_my_details">
                    <div t-esc="partner"
                         t-options='{"widget": "contact", "fields": ["email", "phone", "address", "name"]}'/>
                    <t t-call="cms_form_compassion.modal_form">
                        <t t-set="form" t-value="coordinates_form"/>
                    </t>
                    <button type="button"
                            class="btn btn-default btn-xs"
                            data-toggle="modal"
                            data-target="#modal_coordinates">
                        Change
                    </button>
                </div>
            </div>
        </template>
    </data>
</odoo>