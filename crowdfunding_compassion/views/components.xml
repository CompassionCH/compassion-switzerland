<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="project_card" name="Project card">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-8 ">
                            <h5 class="card-title">my nice project</h5>
                        </div>

                        <div class="col-md-4 text-right">
                            <p>
                                <small>
                                    <i class="fas fa-users white"/>
                                    collective
                                </small>
                            </p>
                        </div>
                    </div>

                    <p>
                        <small>
                            <i class="fas fa-user-circle white"/>
                            project owner + 10 friends
                        </small>
                    </p>
                </div>
                <img class="card-img-top" src="/theme_crowdfunding/static/src/img/musk_ghana_3.jpg" alt="Card image cap" />

                <div class="card-body">
                    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        </template>

             <template id="fund_card" name="Fund card">
            <div class="card fund-card">
                <div class="fund-card__header">
                    <img class="fund-card__image" src="/theme_crowdfunding/static/src/img/head.jpg" alt="Participant image"/>
                    <span class="fund-card__icon"/>
                </div>

                <div class="fund-card__content">

                    <h5 class="blue my-3 fund-card__title">
                        <t t-esc="fund['name']"/>
                    </h5>
                    <p><t t-esc="fund['description']" /></p>
                    <button type="button" class="btn btn-primary btn-md my-3">More infos</button>
                </div>
            </div>
        </template>
    </data>
</odoo>
