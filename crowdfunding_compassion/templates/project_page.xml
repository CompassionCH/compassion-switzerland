<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- === Project Page === -->
        <!-- The corresponding [crowdfunding.project] is passed to this template as context in variable [project] -->
        <template id="project_page">
            <t t-call="crowdfunding_compassion.layout">

                <!-- Hero -->
                <section class="project-hero mb-5">
                    <div class="container">
                        <h1 class="hero-title">
                            <t t-esc="project.name"/>
                        </h1>
                        <div class="row">
                            <div class="col-12 col-lg-8 mb-4 mb-lg-0">
                                <img alt="Project image" t-attf-src="data:image/png;base64, #{ project.cover_photo }" class="project-hero__image" />
                            </div>
                            <div class="col-12 col-lg-4">
                                <div class="card project-hero__card">
                                    <h3 class="blue my-3 text-center">Support the project</h3>
                                    <div class="project-hero__card-content">

                                        <t t-call="crowdfunding_compassion.project_progress"/>

                                    </div>
                                    <div class="project-hero__cart-cta">
                                        <a t-attf-href="/project/#{ project.id }/donation" class="nounderline">
                                            <button type="button" class="btn btn-primary btn-lg btn-block mb-2">
                                                Donate now
                                            </button>
                                        </a>
                                        <div class="row mx-auto">
                                            <div class="col" t-if="project.type == 'collective'">
                                                <a t-attf-href="/projects/join/#{project.id}"
                                                   class="btn btn-white btn-md btn-block">Join the project
                                                </a>
                                            </div>
                                            <div class="col">
                                                <div class="row project-hero__card-share-text" style="font-size: 10px;">Share with your friends
                                                </div>
                                                <!-- TODO: update link to production url -->
                                                <div class="row project-hero__card-share-icons">
                                                    <t t-set="compassion_project_base_url"
                                                       t-value="'crowdfunding.compassion.ch/project'"/>
                                                    <a t-attf-href="https://www.facebook.com/sharer.php?u=#{ compassion_project_base_url }/#{ project.id }"
                                                       target="_blank">
                                                        <i class="fa fa-facebook-official fa-lg"/>
                                                    </a>
                                                    <a t-attf-href="https://twitter.com/intent/tweet?url=#{ compassion_project_base_url }/#{ project.id }"
                                                        target="_blank">
                                                        <i class="fa fa-twitter-square fa-lg"/>
                                                    </a>
                                                    <a t-attf-href="https://www.linkedin.com/sharing/share-offsite/?url=#{ compassion_project_base_url }/#{ project.id }"
                                                        target="_blank">
                                                        <i class="fa fa-linkedin fa-lg"/>
                                                    </a>
                                                    <a t-attf-href="mailto:?subject=I wanted you to see this project&amp;body=Check out this project #{ compassion_project_base_url }/#{ project.id }.">
                                                        <i class="fa fa-at fa-lg"/>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Content -->
                <section class="project-content">
                    <div class="container">
                        <div class="row">
                            <!-- Main content -->
                            <div class="col-12 col-lg-8 mb-5">
                                <div class="project-content__owner mb-4">
                                    <img class="profile-pic" t-attf-src="data:image/png;base64, #{ project.owner_participant_id.profile_photo }" alt="Project owner"/>
                                    <h5>
                                        <t t-esc="project.project_owner_id.name" />
                                    </h5>
                                </div>

                                <!-- Project description and video -->
                                <h3 class="blue my-4">About the project</h3>

                                <p>
                                    <t t-esc="project.description"/>
                                </p>
                                <t t-if="project.presentation_video">
                                    <iframe class="my-3" width="100%" height="400px" t-att-src="project.presentation_video" frameborder="0"/>
                                </t>

                                <!-- Project owner personal motivation and video -->
                                <h3 class="blue my-4">Why do I engage in this project</h3>
                                <p>
                                    <t t-esc="project.owner_participant_id.personal_motivation"/>
                                </p>
                                <t t-if="project.owner_participant_id.presentation_video">
                                    <iframe class="my-3" width="100%" height="400px" t-att-src="project.owner_participant_id.presentation_video" frameborder="0"/>
                                </t>

                                <t t-if="project.facebook_url or project.instagram_url or project.twitter_url or project.personal_web_page_url">
                                    <h5 class="blue mt-4 uppercase">
                                        Follow my project on
                                    </h5>

                                    <a t-attf-href="project.facebook_url"
                                       target="_blank">
                                        <i class="fa fa-facebook-official fa-4x"/>
                                    </a>
                                    <a t-attf-href="project.instagram_url"
                                       target="_blank">
                                        <i class="fa fa-instagram-square fa-4x"/>
                                    </a>
                                    <a t-attf-href="project.twitter_url"
                                        target="_blank">
                                        <i class="fa fa-twitter-square fa-4x"/>
                                    </a>
                                    <a t-attf-href="project.personal_web_page_url">
                                        <i class="fa fa-at fa-4x"/>
                                    </a>
                                </t>

                                <t t-if="project.product_id">
                                    <t t-set="fund_image" t-value="project.product_id.image_large or sponsor_banner"/>
                                    <t t-set="fund_icon" t-value="project.product_id.image_medium" />
                                    <t t-set="fund_name" t-value="project.product_id.crowdfunding_impact_text_active" />
                                    <t t-set="fund_description" t-value="project.product_id.description" />
                                    <div class="my-5">
                                        <t t-call="crowdfunding_compassion.fund_card"/>
                                    </div>
                                </t>
                            </div>


                            <!-- Side content -->
                            <div class="col-12 col-lg-4">

                                <t t-if="impact">
                                    <h3 class="blue text-center uppercase">Impact so far</h3>

                                    <t t-foreach="impact" t-as="impact_tile">
                                        <t t-call="crowdfunding_compassion.impact_tile" />
                                    </t>
                                </t>

                                <t t-else="">
                                    <h3 class="blue text-center mt-5 uppercase">No impact yet</h3>
                                    <t t-call="crowdfunding_compassion.impact_tile_empty" />
                                </t>

                            </div>
                        </div>

                        <!-- Participants -->
                        <t t-if="project.type == 'collective'">
                            <div class="my-5">
                                <h2 class="blue text-center mb-5">Participants</h2>
                                <div class="participants">
                                    <t t-foreach="project.participant_ids" t-as="participant">
                                        <t t-call="crowdfunding_compassion.participant_card"/>
                                    </t>
                                </div>
                            </div>
                        </t>
                    </div>
                </section>

            </t>
        </template>
    </data>
</odoo>
