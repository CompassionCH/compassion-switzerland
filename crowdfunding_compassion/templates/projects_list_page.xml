<odoo>
    <data>
        <template id="project_list_page" name="Project list page">
            <t t-call="crowdfunding_compassion.layout">
                <t t-set="title">Our Projects | TOGETHER - Compassion Switzerland Fundraising</t>
                <section class="container-fluid px-xl-5">
                    <div class="text-center my-4 py-4" t-if="type == 'collective' and status=='active'">
                        <h1 class="display-3 blue uppercase">Join a great project</h1>
                        <h2 class="pb-4">
                            Here are the collective projects in progress.
                            <br/>
                            You can join one of these projects and amplify its impact!
                            <br/>
                            The countdown has begun.

                        </h2>
                    </div>

                    <div id="project_cards">
                        <div t-if="not (type == 'collective' and status=='active')">
                            <h2 class="subheading blue text-center mb-5 mt-4 uppercase">
                                The projects
                            </h2>
                        </div>
                        <div class="navbar navbar-expand-lg navbar-light justify-content-center my-3" style="border: #005EB8 1px solid">
                            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                <ul class="navbar-nav mr-auto">
                                  <li t-att-class="'nav-item' if type is not None and status is not None else 'nav-item active'">
                                    <a class="nav-link" href="/projects" t-att-style="'color: #005EB8 !important' if type is None and status is None else 'color: #707070 !important'">All</a>
                                  </li>
                                    <span class="navbar-text">
                                         |
                                      </span>
                                    <li t-att-class="'nav-item' if type != 'collective' else 'nav-item active'">
                                    <a class="nav-link" t-attf-href="/projects?type=collective#{'&amp;status='+status if status else ''}" t-att-style="'color: #005EB8 !important' if type == 'collective'else 'color: #707070 !important'">Collective</a>
                                  </li>
                                  <li t-att-class="'nav-item' if type != 'individual' else 'nav-item active'">
                                    <a class="nav-link" t-attf-href="/projects?type=individual#{'&amp;status='+status if status else ''}" t-att-style="'color: #005EB8 !important' if type == 'individual' else 'color: #707070 !important'">Individual</a>
                                  </li>
                                    <span class="navbar-text">
                                         |
                                      </span>
                                    <li t-att-class="'nav-item' if status != 'active' else 'nav-item active'">
                                    <a class="nav-link" t-attf-href="/projects?status=active#{'&amp;type='+type if type else ''}" t-att-style="'color: #005EB8 !important' if status == 'active' else 'color: #707070 !important'">Active</a>
                                  </li>
                                    <li t-att-class="'nav-item' if status != 'finish' else 'nav-item active'">
                                    <a class="nav-link" t-attf-href="/projects?status=finish#{'&amp;type='+type if type else ''}" t-att-style="'color: #005EB8 !important' if status == 'finish' else 'color: #707070 !important'">Finished</a>
                                  </li>
                                </ul>
                                <form class="form-inline">
                                    <input id="myInput" class="form-control mr-sm-2" type="search" placeholder="Quick search" aria-label="Quick search" />
                              </form>
                            </div>
                        </div>
                        <div id="myTable" class="row">
                            <t t-foreach="projects" t-as="project">
                                <t t-call="crowdfunding_compassion.project_card"/>
                            </t>
                        </div>
                    </div>
                    <div class="projects_pager">
                        <t t-call="website.pager" />
                    </div>
<!--                TODO CO-3212 -->
                </section>
            </t>
        </template>

        <record id="projects_page" model="website.page">
            <field name="name">Projects</field>
            <field name="website_published">True</field>
            <field name="url">/projects</field>
            <field name="type">qweb</field>
            <field name="website_id" ref="crowdfunding_compassion.crowdfunding_website"/>
            <field name="view_id" ref="crowdfunding_compassion.project_list_page"/>
        </record>
    </data>
</odoo>
