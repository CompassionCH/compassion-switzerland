<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- === Project Page === -->
        <!-- The corresponding [crowdfunding.project] or [crowdfunding.participant] is passed to this template
         as context in variable [project] or [participant] -->
        <template id="presentation_page">
            <t t-call="crowdfunding_compassion.layout">

                <!-- Hero -->
                <section class="project-hero mb-5">
                    <div class="container">
                        <h1 class="hero-title">
                            <t t-esc="project.name"/>
                        </h1>
                        <div class="row">
                            <div class="col-12 col-lg-8 mb-4 mb-lg-0">
                                <img alt="Project image" t-attf-src="data:image/png;base64, #{ project.cover_photo }"
                                     class="project-hero__image"/>
                            </div>
                            <div class="col-12 col-lg-4">
                                <div class="card project-hero__card">
                                    <t t-if="model == 'participant'">
                                        <h3 class="blue my-3 text-center">
                                                <t t-esc="'Support ' + participant.name"/>
                                            </h3>
                                            <div class="project-hero__card-content">
                                                <!-- Setup data and display the sponsorship progress -->
                                                <t t-set="goal_name">sponsored children</t>
                                                <t t-set="goal_reached" t-value="participant.number_sponsorships_reached"/>
                                                <t t-set="goal_objective" t-value="participant.number_sponsorships_goal"/>
                                                <t t-set="goal_image" t-value="'/crowdfunding_compassion/static/src/img/icn_children.png'"/>
                                                <t t-call="crowdfunding_compassion.goal_progress" t-if="goal_objective"/>

                                                <!-- Setup data and display the fund progress -->
                                                <t t-set="goal_name" t-value="project.product_id.crowdfunding_impact_text_passive"/>
                                                <t t-set="goal_reached" t-value="participant.product_number_reached"/>
                                                <t t-set="goal_objective" t-value="participant.product_number_goal"/>
                                                <t t-set="goal_image"
                                                   t-value="participant.project_id.product_id.image_medium or '/crowdfunding_compassion/static/src/img/icn_children.png'"/>
                                                <t t-call="crowdfunding_compassion.goal_progress" t-if="goal_objective"/>
                                            </div>
                                            <div class="project-hero__cart-cta">
                                                <a t-attf-href="/project/#{ project.id }/donation/?participant=#{ participant.id }">
                                                    <button type="button" class="btn btn-primary btn-lg btn-block mb-2">
                                                        Donate now
                                                    </button>
                                                </a>
                                            </div>
                                    </t>
                                    <t t-else="">
                                        <h3 class="blue my-3 text-center">Support the project</h3>
                                        <div class="project-hero__card-content">
                                            <t t-call="crowdfunding_compassion.project_progress"/>
                                        </div>
                                        <div class="project-hero__cart-cta">
                                            <a t-attf-href="/project/#{ project.id }/donation">
                                                <button type="button" class="btn btn-primary btn-lg btn-block mb-2">Donate now</button>
                                            </a>
                                            <a t-if="project.type == 'collective'" t-attf-href="/projects/join/#{project.id}">
                                                <button type="button" class="btn btn-white btn-lg btn-block mb-2">Join the project</button>
                                            </a>
                                            <div class="row project-hero__card-share-text mx-auto">Share with your friends</div>
                                            <div class="row project-hero__card-share-icons mx-auto">
                                                <t t-set="compassion_project_base_url" t-value="base_url + '/project'"/>
                                                <a t-attf-href="https://www.facebook.com/sharer.php?u=#{ compassion_project_base_url }/#{ project.id }" target="_blank">
                                                    <i class="fa fa-facebook-official"/>
                                                </a>
                                                <a t-attf-href="https://twitter.com/intent/tweet?url=#{ compassion_project_base_url }/#{ project.id }" target="_blank">
                                                    <i class="fa fa-twitter-square"/>
                                                </a>
                                                <a t-attf-href="https://www.linkedin.com/sharing/share-offsite/?url=#{ compassion_project_base_url }/#{ project.id }" target="_blank">
                                                    <i class="fa fa-linkedin"/>
                                                </a>
                                                <a t-attf-href="mailto:?subject=I wanted you to see this project&amp;body=Check out this project #{ compassion_project_base_url }/#{ project.id }.">
                                                    <i class="fa fa-at"/>
                                                </a>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Content -->
                <section class="project-content">
                    <div class="container">
                        <div class="row">
                            <!-- Main content -->
                            <div class="col-12 col-lg-8 mb-5">
                                <div class="project-content__owner mb-4">
                                    <t t-if="model == 'project'">
                                        <img class="profile-pic" t-attf-src="data:image/png;base64, #{ project.owner_participant_id.profile_photo }" alt="Project owner"/>
                                        <h5>
                                            <t t-esc="project.project_owner_id.name" />
                                        </h5>
                                    </t>
                                    <t t-else="">
                                        <img class="profile-pic" t-attf-src="data:image/png;base64, #{ participant.profile_photo }" alt="Participant"/>
                                        <h5>
                                            <t t-esc="participant.partner_id.name" />
                                        </h5>
                                    </t>
                                </div>

                                <t t-if="model == 'project'">
                                    <!-- Project description and video -->
                                    <h3 class="blue my-4">About the project</h3>
                                    <p>
                                        <t t-esc="project.description"/>
                                    </p>
                                    <t t-if="project.presentation_video">
                                        <iframe class="my-3" width="100%" height="400px" t-att-src="project.presentation_video" frameborder="0"/>
                                    </t>
                                </t>


                                <!-- Project owner personal motivation and video -->
                                <h3 class="blue my-4">Why do I engage in this project</h3>
                                <p>
                                    <t t-if="model == 'project'">
                                        <t t-esc="project.personal_motivation"/>
                                        <t t-if="project.owner_participant_id.presentation_video">
                                            <iframe class="my-3" width="100%" height="400px" t-att-src="project.owner_participant_id.presentation_video" frameborder="0"/>
                                        </t>
                                    </t>
                                    <t t-else="">
                                        <t t-esc="participant.personal_motivation"/>
                                        <t t-if="participant.presentation_video">
                                            <iframe class="my-3" width="100%" height="400px" t-att-src="participant.presentation_video" frameborder="0"/>
                                        </t>
                                    </t>
                                </p>

                                <t t-if="model == 'project'">
                                    <h5 class="blue mt-4 uppercase">Follow my project on</h5>

                                    <t t-if="project.facebook_url">
                                        <a t-att-href="project.facebook_url" target="_blank">Facebook</a>
                                        <br/>
                                    </t>

                                    <t t-if="project.instagram_url">
                                        <a t-att-href="project.instagram_url" target="_blank">Instagram</a>
                                        <br/>
                                    </t>

                                    <t t-if="project.twitter_url">
                                        <a t-att-href="project.twitter_url" target="_blank">Twitter</a>
                                        <br/>
                                    </t>

                                    <t t-if="project.personal_web_page_url">
                                        <a t-att-href="project.personal_web_page_url" target="_blank">My website</a>
                                        <br/>
                                    </t>

                                    <t t-if="project.product_id">
                                        <t t-set="fund_image" t-value="project.product_id.image_large"/>
                                        <t t-set="fund_icon" t-value="project.product_id.image_medium" />
                                        <t t-set="fund_name" t-value="project.product_id.crowdfunding_impact_text_active" />
                                        <t t-set="fund_description" t-value="project.product_id.crowdfunding_description" />
                                        <div class="my-5">
                                            <t t-call="crowdfunding_compassion.fund_card"/>
                                        </div>
                                    </t>
                                </t>
                                <t t-else="">
                                    <h5 class="blue mt-4 uppercase">Follow me on</h5>

                                    <t t-if="participant.facebook_url">
                                        <a t-att-href="participant.facebook_url" target="_blank">Facebook</a>
                                        <br/>
                                    </t>

                                    <t t-if="participant.instagram_url">
                                        <a t-att-href="participant.instagram_url" target="_blank">Instagram</a>
                                        <br/>
                                    </t>

                                    <t t-if="participant.twitter_url">
                                        <a t-att-href="participant.twitter_url" target="_blank">Twitter</a>
                                        <br/>
                                    </t>

                                    <t t-if="participant.personal_web_page_url">
                                        <a t-att-href="participant.personal_web_page_url" target="_blank">My website</a>
                                        <br/>
                                    </t>
                                </t>
                            </div>


                            <!-- Side content -->
                            <div class="col-12 col-lg-4">

                                <t t-if="impact">
                                    <h3 class="blue text-center uppercase">Impact so far</h3>

                                    <t t-foreach="impact" t-as="impact_tile">
                                        <t t-call="crowdfunding_compassion.impact_tile" />
                                    </t>
                                </t>

                                <t t-else="">
                                    <h3 class="blue text-center mt-5 uppercase">No impact yet</h3>
                                    <t t-call="crowdfunding_compassion.impact_tile_empty" />
                                </t>

                            </div>
                        </div>

                        <t t-if="model == 'project'">
                            <!-- Participants -->
                            <t t-if="project.type == 'collective'">
                                <div class="my-5">
                                    <h2 class="blue text-center mb-5">Participants</h2>
                                    <div class="participants">
                                        <t t-foreach="project.participant_ids" t-as="participant">
                                            <t t-call="crowdfunding_compassion.participant_card"/>
                                        </t>
                                    </div>
                                </div>
                            </t>
                        </t>
                    </div>
                </section>
            </t>
        </template>
    </data>
</odoo>
