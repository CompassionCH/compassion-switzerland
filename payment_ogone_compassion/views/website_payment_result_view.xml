<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="payment_ogone_compassion.accept" page="True">
            <t t-call="website.layout">
                <t t-set="title">Muskathlons</t>
                <div class="oe_structure compassion-wp">
                    <div class="thank_you_container">
                        <t t-set="participant_url"
                           t-value="'/event/'+str(event.id)+'/participant/'+str(registration.partner_id_id)+'-'+registration.partner_name"/>

                        <t t-set="event_url"
                           t-value="'/event/'+str(event.id)"/>

                        <div class="thank_you_image_container">
                            <img class="img-responsive" style="width: 100%" src="https://compassion.ch/wp-content/uploads/2017/02/compassion_thankyou_donation.jpg"/>
                        </div>
                        <div class="thank_you_text_container">
                            <h1>Thank you! Your gift helps release children from poverty!</h1>
                            <p class="quote">
                                It also brings
                                <a style="color: #0054a6;" t-attf-href="{{ participant_url }}"> <t t-esc="registration.partner_preferred_name"/> </a>
                                closer to complete
                                <t t-if="registration.partner_gender == 'F'">
                                    her
                                </t>
                                <t t-else="">
                                    his
                                </t>
                                goal for the
                                <a style="color: #0054a6;" t-attf-href="{{ event_url }}"><t t-esc="event.name"/></a>!
                            </p>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="payment_ogone_compassion.decline" page="True">
            <t t-call="website.layout">
                <t t-set="title">Muskathlons</t>
                <div class="oe_structure compassion-wp">
                    <div class="thank_you_container">
                        <div class="thank_you_image_container">
                            <img class="img-responsive" style="width: 100%" src="https://compassion.ch/wp-content/uploads/2017/02/compassion_thankyou_donation.jpg"/>
                        </div>
                         <t t-set="participant_url"
                                       t-value="'/event/'+str(event.id)+'/participant/'+str(registration.partner_id_id)+'-'+registration.partner_name"/>

                        <div class="thank_you_text_container">
                            <h1>You cancelled your gift or something went wrong.</h1>
                            <p class="quote">
                                If you want to,
                                <a class="button button-blue button-small" t-attf-href="{{ participant_url }}">you can give it another try</a>
                            </p>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>
