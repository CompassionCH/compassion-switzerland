<odoo>
    <data noupdate="1">
        <record id="remove_expired_refresh_tokens_cron" model="ir.cron">
            <field
                name="name"
            >Automatically removes expired refresh tokens to prevent the
                auth_external.refresh_tokens table to grow indefinitely</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="model_id" ref="model_auth_external_refresh_tokens" />
            <field name="state">code</field>
            <field
                name="code"
            >model.remove_expired_tokens()</field>
            <field name="active" eval="True" />
        </record>
    </data>
</odoo>