<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-extend="HrAttendanceMyMainMenu">
        <t t-jquery="h1" t-operation="replace">
            <h1>Welcome <t t-esc="widget.employee.name"/></h1>
            <h3 t-attf-style="color:{{ widget.employee.time_warning_balance }};">Total balance: <t t-esc="widget.employee.extra_hours_formatted"/></h3>
            <h3>Worked today: <t t-esc="widget.employee.today_hour_formatted"/></h3>
            <h3 t-attf-style="color:{{ widget.employee.time_warning_today }};">Balance today: <t t-esc="widget.employee.extra_hours_today"/></h3>
            <h3><t t-esc="widget.employee.time_warning"/></h3>
        </t>
    </t>
</templates>
