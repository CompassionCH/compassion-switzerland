<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- Homepage content  -->
        <template id="custom_homepage" inherit_id="website.homepage" name="Custom Homepage">
            <xpath expr="//div[@id='wrap']" position="inside">
                <div class="container text-center" style="margin-top: 50px; margin-bottom: 50px; margin-left: auto; margin-right: auto;">
                    <div class="oe_structure"/>
                    <h2>Welcome to Compassion Switzerland !</h2>
                    <p>Nous nous engageons à aider les enfants vivant en extrême pauvreté en favorisant leur développement dans les domaines suivants : cognitif, social, économique et spirituel.</p>
                    <p>
                        <a class="btn btn-lg btn-primary" href="https://www.compassion.ch" role="button">Go to our website</a>
                    </p>
                    <p>
                        <a class="btn btn-lg btn-primary" href="/web" role="button">Login</a>
                    </p>
                    <div class="oe_structure"/>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
