<odoo>
        <record id="field_office_alumni_view" model="ir.ui.view">
            <field name="name">field.office.alumni.view</field>
            <field name="model">compassion.field.office</field>
            <field name="inherit_id" ref="child_compassion.view_compassion_field_office_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[1]/group">
                    <group string="Alumni representative">
                        <field name="alumni_representative"/>
                        <field name="alumni_gender"/>
                        <field name="alumni_video_link"/>
                    </group>
                </xpath>
            </field>
        </record>
</odoo>
