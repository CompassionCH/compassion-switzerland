<odoo>
    <record model="ir.ui.view" id="communication_job_form_event">
        <field name="name">communication.job.form.event</field>
        <field name="model">partner.communication.job</field>
        <field
      name="inherit_id"
      ref="thankyou_letters.communication_job_form_thankyou"
    />
        <field name="arch" type="xml">
            <field name="success_sentence_id" position="after">
                <field name="event_id" />
                <field name="ambassador_id" />
            </field>
            <xpath expr="//button[@name='send'][1]" position="after">
                <button
          name="send"
          string="Send Now"
          icon="fa-comment"
          type="object"
          class="oe_highlight"
          attrs="{'invisible':['|',('send_mode', '!=', 'sms'),('state', '!=', 'pending')]}"
        />
            </xpath>
            <!-- Hide fields for SMS -->
            <field name="subject" position="attributes">
                <attribute
          name="attrs"
        >{'invisible': [('send_mode', '=', 'sms')]}</attribute>
            </field>
            <field name="ir_attachment_ids" position="attributes">
                <attribute
          name="attrs"
        >{'invisible': [('send_mode', '=', 'sms')]}</attribute>
            </field>
        </field>
    </record>

    <!--   Add event and ambassador in thank you tree view -->
    <record model="ir.ui.view" id="communication_job_tree_event">
        <field name="name">communication.job.tree.event</field>
        <field name="model">partner.communication.job</field>
        <field
      name="inherit_id"
      ref="thankyou_letters.communication_job_tree_thankyou_donation_amount"
    />
        <field name="arch" type="xml">
            <field name="success_sentence_id" position="after">
                <field name="event_id" />
                <field name="ambassador_id" />
            </field>
        </field>
    </record>
    <record model="ir.ui.view" id="communication_job_tree_general">
        <field name="name">communication.job.tree.general</field>
        <field name="model">partner.communication.job</field>
        <field name="mode">primary</field>
        <field
      name="inherit_id"
      ref="partner_communication.communication_job_tree"
    />
        <field name="arch" type="xml">
            <field name="state" position="after">
                <field name="amount" />
            </field>
        </field>
    </record>

    <!-- Add language and event filters in search view -->
    <record model="ir.ui.view" id="communication_job_search">
        <field name="name">communication.job.search.switzerland</field>
        <field name="model">partner.communication.job</field>
        <field
      name="inherit_id"
      ref="partner_communication.communication_job_search"
    />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="ambassador_id" />
            </field>
            <filter name="physical" position="after">
                <separator />
                <filter
          string="French"
          name="french"
          domain="[('partner_id.lang', '=', 'fr_CH')]"
        />
                <filter
          string="German"
          name="german"
          domain="[('partner_id.lang', '=', 'de_DE')]"
        />
                <filter
          string="Italian"
          name="italian"
          domain="[('partner_id.lang', '=', 'it_IT')]"
        />
                <filter
          string="English"
          name="english"
          domain="[('partner_id.lang', '=', 'en_US')]"
        />
            </filter>
            <filter name="config" position="before">
                <filter
          string="Event"
          name="event"
          domain="[]"
          context="{'group_by':'event_id'}"
        />
                <filter
          string="Ambassador"
          name="ambassador"
          domain="[]"
          context="{'group_by':'ambassador_id'}"
        />
            </filter>
        </field>
    </record>

    <!-- Add menu for editing e-mail templates of communications -->
    <record id="action_communication_template" model="ir.actions.act_window">
        <field name="name">Communication templates</field>
        <field name="res_model">mail.template</field>
        <field name="view_mode">tree,form</field>
        <field
      name="domain"
    >[('model_id.model', '=', 'partner.communication.job')]</field>
    </record>

    <!-- Change tree view of e-mails -->
    <record model="ir.ui.view" id="view_mail_tree">
        <field name="name">mail.mail.tree.compassion</field>
        <field name="model">mail.mail</field>
        <field name="inherit_id" ref="mail.view_mail_tree" />
        <field name="arch" type="xml">
            <tree position="attributes">
                <attribute
          name="decoration-muted"
        >state in ('received', 'cancel')</attribute>
                <attribute name="decoration-info">state=='outgoing'</attribute>
                <attribute
          name="decoration-danger"
        >state=='exception'</attribute>
                <attribute name="decoration-success">state=='sent'</attribute>
            </tree>
        </field>
    </record>

    <!-- Add Event Donation -->
    <record
    id="thankyou_letters.action_thank_you"
    model="ir.actions.act_window"
  >
        <field
      name="domain"
    >[('model', '=', 'account.move.line'), ('event_id', '=', False)]</field>
    </record>
    <record id="action_thank_you_event" model="ir.actions.act_window">
        <field name="name">Event Donation Receipts</field>
        <field name="res_model">partner.communication.job</field>
        <field name="view_mode">tree,form</field>
        <field
      name="view_ids"
      eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('communication_job_tree_event')})]"
    />
        <field
      name="domain"
    >[('model', '=', 'account.move.line'), ('event_id', '!=', False)]</field>
        <field
      name="context"
    >{'search_default_my_communications': 1, 'search_default_pending': True, 'search_default_event': True, 'default_user_id': uid}</field>
    </record>
    <record id="action_thank_you_general" model="ir.actions.act_window">
        <field name="name">General Donation Receipts</field>
        <field name="res_model">partner.communication.job</field>
        <field name="view_mode">tree,form</field>
        <field
      name="view_ids"
      eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('communication_job_tree_general')})]"
    />
        <field
      name="domain"
    >[('model', '=', 'account.move.line'), ('event_id', '=', False)]</field>
        <field
      name="context"
    >{'search_default_my_communications': 1, 'search_default_pending': True, 'default_user_id': uid}</field>
    </record>

     <menuitem
    id="menu_donation_success_story"
    name="Success Stories"
    parent="partner_communication_compassion.menu_donation"
    action="thankyou_letters.action_success_story"
  />

    <!-- Add event donation menu in Sales-->
    <menuitem
    id="menu_donation_general"
    name="General Donations"
    parent="thankyou_letters.menu_donation_general"
    action="action_thank_you_general"
  />
    <menuitem
    id="menu_donation_event"
    name="Event Donations"
    parent="thankyou_letters.menu_donation_general"
    action="action_thank_you_event"
  />

    <!--  Move parent menu  -->
    <menuitem
    id="partner_communication.menu_communication"
    parent="account.menu_finance"
    name="Communications"
    sequence="5"
  />
</odoo>
