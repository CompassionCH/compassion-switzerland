<odoo>
    <data>
        <record model="ir.ui.view" id="change_text_wizard_event_form">
            <field name="name">change.text.wizard.event.form</field>
            <field name="model">partner.communication.change.text.wizard</field>
            <field
        name="inherit_id"
        ref="partner_communication.change_text_wizard_form"
      />
            <field name="arch" type="xml">
                <xpath expr="//div[@states='preview']" position="after">
                    <div states="event">
                        <button
              name="get_preview"
              string="Generate preview"
              type="object"
              class="oe_stat_button"
              icon="fa-search-plus"
            />
                        <group>
                            <field name="event_name" />
                            <field name="event_text" />
                            <field name="ambassador_id" />
                            <field
                name="ambassador_name"
                attrs="{'invisible': [('ambassador_id', '=', False)]}"
              />
                            <field
                name="ambassador_text"
                attrs="{'invisible': [('ambassador_id', '=', False)]}"
              />
                        </group>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
