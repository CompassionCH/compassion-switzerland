            <field name="model_id" ref="model_recurring_contract"/>
            <field name="attachments_function"></field>
        </record>
        <record id="config_onboarding_photo_by_post" model="partner.communication.config">
            <field name="name">Sponsorship Onboarding - Photo by post</field>
            <field name="send_mode">physical</field>
            <field name="email_template_id" ref="mail_onboarding_photo_by_post"/>
            <field name="report_id" ref="report_compassion.report_partner_communication"/>
            <field name="model_id" ref="model_recurring_contract"/>
            <field name="attachments_function">get_child_picture_attachment</field>
        </record>
        <record id="config_onboarding_zoom_reminder" model="partner.communication.config">
            <field name="name">Sponsorship Onboarding - Zoom Reminder</field>
            <field name="send_mode">auto_digital_only</field>
            <field name="email_template_id" ref="mail_onboarding_zoom_reminder"/>
            <field name="report_id" ref="report_compassion.report_partner_communication"/>
            <field name="model_id" ref="model_res_partner_zoom_session"/>
        </record>
        <record id="config_onboarding_first_letter" model="partner.communication.config">
            <field name="name">Sponsorship Onboarding - First B2S Letter</field>
            <field name="send_mode">digital</field>
            <field name="send_mode_pref_field">letter_delivery_preference</field>
            <field name="email_template_id" ref="mail_onboarding_first_letter"/>
            <field name="report_id" ref="report_compassion.report_partner_communication"/>
            <field name="model_id" ref="model_correspondence"/>
            <field name="attachments_function">get_correspondence_attachments</field>
        </record>

        <!-- Automations -->
        <record id="onboarding_step2_automation" model="base.automation">
            <field name="name">Sponsorship Onboarding: step2</field>
            <field name="model_id" ref="model_recurring_contract"/>
            <field name="trigger">on_time</field>
            <field name="trg_date_id" ref="recurring_contract.field_recurring_contract__start_date"/>
            <field name="filter_domain" eval="[('type', 'like', 'S'),('state', 'not in', ['cancelled','terminated','draft']),('start_date', '&gt;=', datetime.today())]"/>
            <field name="trg_date_range">2</field>
            <field name="trg_date_range_type">day</field>
            <field name="state">communication</field>
            <field name="config_id" ref="config_onboarding_step2"/>
            <field name="partner_field">correspondent_id</field>
        </record>
        <record id="onboarding_step3_automation" model="base.automation">
            <field name="name">Sponsorship Onboarding: step3</field>
            <field name="model_id" ref="model_recurring_contract"/>
            <field name="trigger">on_time</field>
            <field name="trg_date_id" ref="recurring_contract.field_recurring_contract__start_date"/>
            <field name="filter_domain" eval="[('type', 'like', 'S'),('state', 'not in', ['cancelled','terminated','draft']),('is_first_sponsorship', '=', True),('start_date', '&gt;=', datetime.today())]"/>
            <field name="trg_date_range">7</field>
            <field name="trg_date_range_type">day</field>
            <field name="state">communication</field>
            <field name="config_id" ref="config_onboarding_step3"/>
            <field name="partner_field">correspondent_id</field>
