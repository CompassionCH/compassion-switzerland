        </record>
        <record id="onboarding_confirmation_not_read_automation" model="base.automation">
            <field name="name">Sponsorship Onboarding: sponsorship confirmation not read</field>
            <field name="model_id" ref="model_partner_communication_job"/>
            <field name="trigger">on_time</field>
            <field name="trg_date_id" ref="partner_communication.field_partner_communication_job__sent_date"/>
            <field name="filter_domain" eval="[('config_id', '=', ref('partner_communication_switzerland.config_onboarding_sponsorship_confirmation')),('state', '=', 'done'), ('send_mode', '=', 'digital')]"/>
            <field name="trg_date_range">2</field>
            <field name="trg_date_range_type">day</field>
            <field name="state">code</field>
            <field name="code">
not_read = records.filter_not_read()
new_comms = not_read.copy({'config_id': env.ref('partner_communication_switzerland.config_onboarding_sponsorship_confirmation_not_read').id, 'send_mode': 'physical'})
new_comms.refresh_text()
            </field>
        </record>
        <record id="onboarding_zoom_reminder_automation" model="base.automation">
            <field name="name">Sponsorship Onboarding: send zoom meeting reminder</field>
            <field name="model_id" ref="model_res_partner_zoom_session"/>
            <field name="trigger">on_time</field>
            <field name="trg_date_id" ref="field_res_partner_zoom_session__date_start"/>
            <field name="filter_domain" eval="[('state', '=', 'planned')]"/>
            <field name="trg_date_range">-2</field>
            <field name="trg_date_range_type">day</field>
            <field name="state">code</field>
            <field name="code">
records.send_reminder()
            </field>
        </record>
    </data>
