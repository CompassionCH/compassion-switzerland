<odoo>
    <record id="report_csp_picture" model="ir.actions.report">
        <field name="model">compassion.child</field>
        <field name="name">CSP Picture</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">partner_communication_switzerland.csp_picture</field>
    </record>
    <record id="report_csp_picture" model="ir.actions.report">
        <field name="paperformat_id" ref="paperformat_child_picture" />
    </record>

    <template id="csp_picture">
        <t t-call="web.html_container">
            <div class="article">
                    <div class="page">
                        <style type="text/css">
img {
  width: 101mm;
  height: 153mm;
  position: absolute;
  object-fit: fill;
}
          </style>
                        <img
            t-attf-src="https://compassion.ch/medias/csp/#{FO}_motherpic.jpg"
          />
                    </div>
            </div>
        </t>
    </template>
</odoo>
